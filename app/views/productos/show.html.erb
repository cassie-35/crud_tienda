<%= stylesheet_link_tag 'dpyp', media: 'all' %>

<h1>Detalles del Producto</h1>

<div class="product-details">
  <p>
    <strong>Nombre:</strong>
    <%= @producto.nombre %>
  </p>

  <p>
    <strong>Precio:</strong>
    <%= number_to_currency(@producto.precio) %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= @producto.stock %>
  </p>

  <p>
    <strong>Descripción:</strong>
    <%= @producto.descripcion %>
  </p>

  <p>
    <strong>Categoría:</strong>
    <%= @producto.categorium.nombre if @producto.categorium %>
  </p>

  <p>
    <strong>Proveedor:</strong>
    <%= @producto.proveedor.nombre if @producto.proveedor %>
  </p>
</div>

<div class="action-links">
  <%= link_to 'Editar', edit_producto_path(@producto), class: 'btn btn-primary' %>
  <%= link_to 'Eliminar', @producto, method: :delete, data: { confirm: '¿Estás seguro de que deseas eliminar este producto?' }, class: 'btn btn-danger' %>
  <%= link_to 'Volver a la lista de productos', productos_path, class: 'btn btn-secondary' %>
</div>

