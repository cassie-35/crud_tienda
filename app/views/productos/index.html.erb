<h1>Productos</h1>

<%= link_to 'Nuevo Producto', new_producto_path %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Stock</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre %></td>
        <td><%= number_to_currency(producto.precio) %></td>
        <td><%= producto.stock %></td>
        <td>
          <%= link_to 'Mostrar', producto_path(producto) %>
          <%= link_to 'Editar', edit_producto_path(producto) %>
          <%= link_to 'Eliminar', producto_path(producto), method: :delete, data: { confirm: '¿Estás seguro?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
